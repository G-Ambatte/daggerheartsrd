    {
      "id": "druid-warden-of-the-elements",
      "type": "subclass",
      "class": "Druid",
      "subclass": "Warden of the Elements",
      "name": "Warden of the Elements",
      "spellcastTrait": "instinct",
      "levels": {
        "foundation": {
          "level": "foundation",
          "traits": [
            {
              "name": "Elemental Incarnation",
              "description": "**Mark a Stress** to *Channel* one of the following elements until you take Severe damage or until your next rest:",
              "frequency": "ability",
              "options": [
                {
                  "option": "Fire",
                  "description": "When an adversary within melee range deals damage to you, they take 1d10 magic damage."
                },
                {
                  "option": "Earth",
                  "description": "Gain a bonus to your damage thresholds equal to your proficiency."
                },
                {
                  "option": "Water",
                  "description": "When you deal damage to an adversary within Melee range, all other adversaries within Very Close range must mark a Stress."
                },
                {
                  "option": "Air",
                  "description": "You can hover, gaining advantage on Agility Rolls."
                }
              ]
            }
          ],
          "tags": ["druid", "warden of the elements", "foundation"],
          "source": [
            {
              "set": "DH Core",
              "id": "007/270",
              "publisher": "Daggerheart © Darrington Press 2025",
              "updated": "2025-06-15"
            },
            {
