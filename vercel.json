{
  "version": 2,
  "builds": [
    {
      "src": "server/main.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/server/main.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}